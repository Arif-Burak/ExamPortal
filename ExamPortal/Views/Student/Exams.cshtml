@model IEnumerable<ExamPortal.Models.Exam>

@{
    ViewData["Title"] = "Sınavlar";
}

<h1>Sınavlar</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Title</td>
                <td>@exam.Description</td>
                <td>
                    <a asp-action="StartExam" asp-route-examId="@exam.Id" class="btn btn-primary btn-sm">Katıl</a>
                </td>
            </tr>
        }
    </tbody>
</table>
